@model LoginRequestModel

@{
    ViewData["Title"] = "Вход";
}

<div class="text-center">
    <h1 class="display-4">Вход</h1>
    <p>Войдите в свой аккаунт.</p>
    <a href="/auth/reg" class="btn btn-outline-primary">У меня ещё нет аккаунта</a>
</div>

<div class="container">
    <form method="post" action="/auth/login" asp-antiforgery="true" class="form-horizontal">
        <div class="bg-danger" asp-validation-summary="ModelOnly"></div>

        <div class="form-group">
            <label class="control-label col-sm-2">Никнейм или эл. почта</label>
            <div class="col-sm-10">
                <input type="text" asp-for="Login" class="form-control"/>
            </div>
            <span asp-validation-for="Login" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2">Пароль</label>
            <div class="col-sm-10">
                <input type="password" asp-for="Password" class="form-control"/>
            </div>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

    <div class="form-group">        
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-outline-primary">Войти</button>
      </div>
    </div>
    </form>
</div>

<partial name="_validationscriptspartial" />